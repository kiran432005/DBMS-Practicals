SELECT First_name, Last_name FROM Employee;


SELECT DISTINCT Department FROM Employee;


SELECT 
    First_name,
    YEAR(Joining_date) AS Joining_Year,
    MONTH(Joining_date) AS Joining_Month,
    DAY(Joining_date) AS Joining_Day
FROM Employee;


SELECT * FROM Employee ORDER BY Salary ASC;


SELECT * FROM Employee WHERE First_name LIKE 'A%';


UPDATE Employee
SET Salary = Salary + 5000
WHERE Salary < 20000;


UPDATE Employee
SET Department = NULL
WHERE Employee_id = 004;


SELECT Department, MIN(Salary) AS Min_Salary
FROM Employee
GROUP BY Department;


SELECT Department, AVG(Salary) AS Avg_Salary
FROM Employee
GROUP BY Department
ORDER BY Avg_Salary ASC;




CREATE TABLE Employee2 (
    Employee_id INT PRIMARY KEY,
    Employee_name VARCHAR(50),
    City VARCHAR(50),
    Company_Name VARCHAR(50),
    Salary DECIMAL(10,2)
);


INSERT INTO Employee2 VALUES
(1, 'Amit', 'Pune', 'IBM', 28000),
(2, 'Priti', 'Mumbai', 'Infosys', 35000),
(3, 'Sagar', 'Pune', 'TCS', 25000),
(4, 'Rohan', 'Delhi', 'IBM', 40000),
(5, 'Sneha', 'Pune', 'Infosys', 31000),
(6, 'Aarav', 'Nashik', 'IBM', 33000),
(7, 'Komal', 'Pune', 'IBM', 45000),
(8, 'Meena', 'Mumbai', 'Wipro', 27000),
(9, 'Raj', 'Pune', 'Infosys', 29000),
(10, 'Nisha', 'Bangalore', 'IBM', 50000);


SELECT * FROM Employee2
WHERE Company_Name = 'IBM' AND City = 'Pune';


SELECT Employee_name, City
FROM Employee2
WHERE Company_Name = 'Infosys' OR Salary > 30000;


SELECT * FROM Employee2
WHERE Company_Name = 'IBM' AND City <> 'Mumbai';


SELECT Company_Name, MAX(Salary) AS Max_Salary
FROM Employee2
GROUP BY Company_Name;



SELECT DISTINCT Company_Name
FROM Employee2
WHERE Salary > (
    SELECT AVG(Salary)
    FROM Employee2
    WHERE Company_Name = 'IBM'
);
